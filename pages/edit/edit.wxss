.page-edit {
    position: relative;
    display: block;
    width: 100vw;
    height: 100vh;
}

.bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

/* header */
.header {
    position: relative;
    width: 100%;
    background-color: #1aad19;
}

.header__text {
    display: block;
    width: 100%;
    line-height: 44px;
    text-align: center;
    color: #fff;
}

.back {
    position: absolute;
    top: 10px;
    left: 15px;
    width: 24px;
    height: 24px;
}

/* form */
.form-box {
    display: block;
    padding: 0 10px;
    margin-top: 10px;
}

.date-picker {
    border: 1px solid #999;
    box-sizing: border-box;
    border-radius:3px;
}

.picker-content {
    padding: 10px;
}

.title {
    height: 40px;
    line-height: 40px;
    margin: 10px auto;
    padding:0 10px;
    border: 1px solid #999;
    box-sizing: border-box;
    border-radius:3px;
}

.content {
    margin: 0 auto;
    padding: 10px;
    width: 100%;
    height: 300px;
    box-sizing: border-box;
    border: 1px solid #999;
    border-radius:3px;
}

.btn {
    display: block;
    width: 80%;
    margin: 20px auto; 
    background: #1aad19; 
    line-height: 44px; 
    color: #fff;
}